{
  "name": "healthcare-platform",
  "version": "1.0.0",
  "description": "Enterprise Healthcare Platform - 1M+ Users Scale",
  "private": true,
  "workspaces": [
    "services/*",
    "libs/*"
  ],
  "scripts": {
    "install:all": "npm install && lerna bootstrap",
    "build:all": "lerna run build",
    "start:dev": "docker-compose -f docker-compose.dev.yml up",
    "start:services": "lerna run start:dev --parallel",
    "test": "lerna run test",
    "test:e2e": "lerna run test:e2e",
    "test:cov": "lerna run test:cov",
    "lint": "lerna run lint",
    "format": "lerna run format",
    "migration:run": "lerna run migration:run",
    "migration:generate": "lerna run migration:generate",
    "seed:data": "lerna run seed:data",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:deploy": "kubectl apply -f infrastructure/k8s/",
    "monitoring:up": "docker-compose -f docker-compose.monitoring.yml up -d"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lerna": "^7.1.1",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/bull": "^10.0.0",
    "@nestjs/cache-manager": "^2.0.0",
    "@nestjs/throttler": "^4.0.0",
    "@nestjs/terminus": "^10.0.0",
    "@nestjs/schedule": "^3.0.0",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1"
  }
}